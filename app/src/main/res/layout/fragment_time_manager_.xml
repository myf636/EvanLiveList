<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.TimeManager_Fragment">

    <android.support.design.widget.TabLayout
        android:id="@+id/time_manager_bt_tab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:background="@color/app_color"
        app:tabIndicatorColor="@android:color/transparent"
        app:tabSelectedTextColor="@color/tab_selected"
        app:tabTextColor="@color/tab_text" />

    <android.support.v4.view.ViewPager
        android:id="@+id/time_manager_vp_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/time_manager_bt_tab" />


</RelativeLayout>
