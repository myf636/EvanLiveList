<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                       xmlns:tools="http://schemas.android.com/tools"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       tools:context=".fragment.TimeManager_Fragment">

    <android.support.v4.view.ViewPager
        android:id="@+id/time_manager_vp_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/time_manager_bt_tab"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/time_manager_bt_tab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        app:tabTextColor="@color/tab_text"
        app:tabSelectedTextColor="@color/tab_selected"
        android:background="@color/app_color"
        app:tabIndicatorColor="@android:color/transparent"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="64dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:src="@android:drawable/ic_dialog_email"/>
</com.zhy.autolayout.AutoRelativeLayout>
