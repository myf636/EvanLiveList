<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InComeActivity.InCome_Fragment">

    <LinearLayout
        android:id="@+id/income_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="480px"
            android:layout_marginLeft="18px"
            android:layout_marginRight="18px"
            android:layout_marginTop="18px"
            app:cardCornerRadius="8dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/income_c1_list"
                android:layout_width="match_parent"
                android:layout_height="400px"
                android:layout_marginTop="20px"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/income_c1_ifempty"
                android:layout_width="match_parent"
                android:layout_height="400px"
                android:layout_marginTop="20px"
                android:contentDescription="ifempty"
                android:visibility="gone" />

            <Button
                android:id="@+id/income_c1_more"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginBottom="10px"
                android:layout_gravity="bottom"
                android:background="@android:color/transparent"
                android:text="@string/income_more" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="480px"
            android:layout_marginLeft="18px"
            android:layout_marginRight="18px"
            android:layout_marginTop="18px"
            app:cardCornerRadius="8dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/income_c2_list"
                android:layout_width="match_parent"
                android:layout_height="400px"
                android:layout_marginTop="20px"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/income_c2_ifempty"
                android:layout_width="match_parent"
                android:layout_height="400px"
                android:layout_marginTop="20px"
                android:contentDescription="ifempty"
                android:visibility="gone" />

            <Button
                android:id="@+id/income_c2_more"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginBottom="10px"
                android:layout_gravity="bottom"
                android:background="@android:color/transparent"
                android:text="@string/income_card_manager" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18px"
            android:layout_marginRight="18px"
            android:layout_marginBottom="80px"
            android:layout_marginTop="18px"
            app:cardCornerRadius="8dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/income_c3_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/income_c3_ifempty"
                android:layout_width="match_parent"
                android:layout_height="400px"
                android:layout_marginTop="20px"
                android:contentDescription="ifempty"
                android:visibility="gone" />

        </android.support.v7.widget.CardView>
    </LinearLayout>

</ScrollView>
